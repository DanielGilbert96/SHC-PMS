<h1>New Record</h1>
<% if @patient.errors.any? %>
<% @patient.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger"><%= msg %></div>
<% end %>
<% end %>
<%= form_for :record, url: records_path(@patient) do |f| %>

<p>
  <%= f.label :injury %><br>
  <%= f.text_field(:injury, {:class => 'form-control'}) %>
</p>
<p>
  <%= f.label :infection %><br>
  <%= f.text_field(:infection, {:class => 'form-control'}) %>
</p>
<p>
  <%= f.label :observation %><br>
  <%= f.text_area(:observation, {class: "form-control"}) %>
</p>
<p>
  <%= f.label :clinic %><br>
  <%= f.text_field(:clinic, {class: "form-control"}) %>
</p>
<p>
  <%= f.submit({:class => "btn btn-primary"}) %>
</p>
<% end %>
